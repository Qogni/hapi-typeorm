{
  "extends": [
    "tslint:recommended",
    "tslint-no-unused-expression-chai"
  ],
  "rules": {
    "arrow-parens": false,
    "indent": [ true, "spaces" ],
    "interface-name": false,
    "member-access": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  }
}
