{
  "name": "hapi-typeorm",
  "version": "0.3.1",
  "description": "Hapi plugin for TypeORM.",
  "main": "lib/Plugin.js",
  "types": "lib/Plugin.d.ts",
  "scripts": {
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "build": "tsc src/Plugin.ts -d -m 'commonjs' -t 'es2017' --outDir lib",
    "lint": "tslint ./src/**",
    "test": "jest"
  },
  "keywords": [
    "hapi",
    "typeorm",
    "orm",
    "plugin"
  ],
  "author": "Rodrigo Saboya",
  "license": "MIT",
  "devDependencies": {
    "@types/hapi__hapi": "^18.2.6",
    "@types/jest": "^24.0.22",
    "@hapi/hapi": "^18.4.0",
    "jest": "^24.9.0",
    "sqlite3": "^4.1.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.11.0",
    "typeorm": "^0.2.20",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "typeorm": "^0.2.9"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*?\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
