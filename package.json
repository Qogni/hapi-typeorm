{
  "name": "hapi-typeorm",
  "version": "0.2.0",
  "description": "Hapi plugin for TypeORM.",
  "main": "lib/Plugin.js",
  "types": "lib/Plugin.d.ts",
  "scripts": {
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "build": "tsc src/Plugin.ts -d -m 'commonjs' -t 'es2017' --outDir lib",
    "lint": "tslint ./src/**",
    "test": "jest"
  },
  "keywords": [
    "hapi",
    "typeorm",
    "orm",
    "plugin"
  ],
  "author": "Rodrigo Saboya",
  "license": "MIT",
  "devDependencies": {
    "@types/hapi": "^17.0.10",
    "@types/jest": "^22.2.3",
    "hapi": "^17.3.1",
    "jest": "^22.4.3",
    "sqlite3": "^4.0.0",
    "ts-jest": "^22.4.5",
    "tslint": "^5.9.1",
    "typeorm": "^0.2.0",
    "typescript": "^2.8.3"
  },
  "peerDependencies": {
    "typeorm": "^0.2.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*?\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
